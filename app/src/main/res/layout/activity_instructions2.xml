<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:text="Instructions for Use"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Step 2:"
        android:textColor="@color/colorPrimaryDark"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Point the camera at the"
        android:textColor="@color/colorPrimaryDark"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="goalposts and tap any part of"
        android:textColor="@color/colorPrimaryDark"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="the goalposts on your screen."
        android:textColor="@color/colorPrimaryDark"
        android:typeface="monospace" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:background="@drawable/instructions2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:backgroundTint="@color/colorAccent"
        android:onClick="pickColIntent4"
        android:text="NEXT"
        android:textSize="50dp"
        android:textColor="@color/colorPrimaryDark"
        android:typeface="monospace" />
</LinearLayout>